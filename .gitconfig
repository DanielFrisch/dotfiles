[user]
  name = Ricardo Amores
  email = rickyah@gmail.com

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  # Include summaries of merged commits in newly created merge commit messages
  log = true

[core]
  excludesfile = /Users/ricky/.gitignore_global
  editor = subl -w
  mergeoptions = --no-ff --no-commit
  
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path = 

[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true

[apply]
  # Detect whitespace errors when applying a patch
  whitespace = fix
  
[alias]
  co = checkout
  cr = checkout -b
  cb = checkout --
  b = branch
  ba = branch -a
  re = remote
  rea = remote -v
  rb = rebase
  rbi = rebase -i
  rbc = rebase --continue
  rba = rebase --abort
  rbs = rebase --skip
  t = tag -l
  s = status -s
  ss = status
  r = rebase
  sq = rebase -i
  c = commit
  cm = commit -m
  cma = commit -am
  f = fetch
  ps = push
  pl = pull
  l = log --pretty=format:\"%h %an %ar - %s\"
  lg = log --prety=format:\"%h %an %ar - %s\" --graph
  tracked = !"d() { git for-each-ref --format='%(refname:short)' refs/heads/* | while read b; do if r=$(git config --get branch.$b.remote); then m=$(git config --get branch.$b.merge); echo \"$b -> $r/${m##*/}\"; fi; done } ; d"
  unstage = reset HEAD
  #show changes
  wc = whatchanged -p --abbrev-commit --pretty=medium

  # `git di $number` shows the diff between the state `$number` revisions ago and the current state
  di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"

[push]
  default=simple

